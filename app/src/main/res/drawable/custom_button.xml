<?xml version="1.0" encoding="utf-8"?>

<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_focused="true">
        <shape android:shape="rectangle">

            <solid android:color="@color/color_button_pressed"/>

            <corners android:radius="@dimen/padding_eight_dp"/>

        </shape>

    </item>

    <item android:state_pressed="true">

        <shape android:shape="rectangle">

            <solid android:color="@color/color_button_pressed"/>


            <corners android:radius="@dimen/padding_eight_dp"/>

        </shape>
    </item>

    <item>
        <shape android:shape="rectangle">

            <gradient android:startColor="@color/color_app_theme_accent"
                android:endColor="@color/color_gradient_end" android:type="linear"
                />

            <corners android:radius="@dimen/padding_eight_dp"/>

        </shape>
    </item>

</selector>

