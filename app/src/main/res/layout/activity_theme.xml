<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".themeActivity">

    <android.support.constraint.Guideline
        android:id="@+id/guideline_theme_vertical_left"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.25"
        />

    <android.support.constraint.Guideline
        android:id="@+id/guideline_theme_vertical_right"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.75"
        />


    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar_theme"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bottomnavigation"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:title="SELECT AN ISSUE"
        app:titleTextAppearance="@style/mBoldAppearnace"
        app:titleTextColor="@color/color_white"
        />

    <Button
        android:id="@+id/timeManagement"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/theme_button"
        android:backgroundTint="@color/color_purple"
        android:fontFamily="@font/mbold"
        android:text="TIME \n MANAGEMENT"
        android:textColor="@color/color_white"
        android:textSize="@dimen/text_sixteen_sp"
        android:layout_margin="@dimen/margin_sixteen_dp"
        app:layout_constraintTop_toBottomOf="@id/toolbar_theme"
        app:layout_constraintStart_toStartOf="@id/guideline_theme_vertical_left"
        app:layout_constraintEnd_toEndOf="@id/guideline_theme_vertical_right"
        app:layout_constraintBottom_toTopOf="@id/guideline_theme_horizontal_one"
        />

    <android.support.constraint.Guideline
        android:id="@+id/guideline_theme_horizontal_one"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.35"
        />

    <Button
        android:id="@+id/anxiety"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/theme_button"
        android:backgroundTint="@color/color_yellow"
        android:fontFamily="@font/mbold"
        android:text="ANXIETY"
        android:textColor="@color/color_black"
        android:textSize="@dimen/text_sixteen_sp"
        android:layout_margin="@dimen/margin_sixteen_dp"
        app:layout_constraintTop_toBottomOf="@id/guideline_theme_horizontal_one"
        app:layout_constraintStart_toStartOf="@id/guideline_theme_vertical_left"
        app:layout_constraintEnd_toEndOf="@id/guideline_theme_vertical_right"
        app:layout_constraintBottom_toTopOf="@id/guideline_theme_horizontal_two" />

    <android.support.constraint.Guideline
        android:id="@+id/guideline_theme_horizontal_two"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.625"
        />


    <Button
        android:id="@+id/internet"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/theme_button"
        android:backgroundTint="@color/color_light_green"
        android:fontFamily="@font/mbold"
        android:text="INTERNET \n ADDICTION"
        android:textAlignment="center"
        android:textColor="@color/color_white"
        android:textSize="@dimen/text_sixteen_sp"
        android:layout_margin="@dimen/margin_sixteen_dp"
        app:layout_constraintTop_toBottomOf="@id/guideline_theme_horizontal_two"
        app:layout_constraintStart_toStartOf="@id/guideline_theme_vertical_left"
        app:layout_constraintEnd_toEndOf="@id/guideline_theme_vertical_right"
        app:layout_constraintBottom_toTopOf="@id/guideline_theme_horizontal_three" />

    <android.support.constraint.Guideline
        android:id="@+id/guideline_theme_horizontal_three"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.9"
        />

    <android.support.design.widget.BottomNavigationView
        android:id="@+id/bottom"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/bottomnavigation"
        app:itemIconSize="@dimen/margin_twenty_eight_dp"
        app:itemIconTint="@color/color_white"
        app:itemTextColor="@color/color_white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:menu="@menu/mymenu" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/signout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/margin_twelve_dp"
        android:backgroundTint="@color/color_maroon"
        android:contentDescription="Logout"
        android:src="@drawable/signout"
        android:tooltipText="LOG OUT"
        app:layout_constraintBottom_toTopOf="@id/bottom"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@id/guideline_theme_vertical_right" />




</android.support.constraint.ConstraintLayout>