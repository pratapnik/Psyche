<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".themeActivity">


    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar_theme"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bottomnavigation"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:title="SELECT AN ISSUE"
        app:titleTextAppearance="@style/mBoldAppearnace"
        app:titleTextColor="@color/color_white"
        />

    <Button
        android:id="@+id/timeManagement"
        android:layout_width="160dp"
        android:layout_height="160dp"
        android:background="@drawable/theme_button"
        android:backgroundTint="@color/color_purple"
        android:fontFamily="@font/mbold"
        android:text="TIME \n MANAGEMENT"
        android:textColor="@color/color_white"
        android:textSize="@dimen/text_sixteen_sp"
        app:layout_constraintBottom_toTopOf="@id/anxiety"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/toolbar_theme" />

    <Button
        android:id="@+id/anxiety"
        android:layout_width="160dp"
        android:layout_height="160dp"
        android:background="@drawable/theme_button"
        android:backgroundTint="@color/color_yellow"
        android:fontFamily="@font/mbold"
        android:text="ANXIETY"
        android:textColor="@color/color_black"
        android:textSize="@dimen/text_sixteen_sp"
        app:layout_constraintBottom_toTopOf="@id/internet"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/timeManagement" />


    <Button
        android:id="@+id/internet"
        android:layout_width="160dp"
        android:layout_height="160dp"
        android:layout_marginBottom="@dimen/margin_twenty_four_dp"
        android:background="@drawable/theme_button"
        android:backgroundTint="@color/color_light_green"
        android:fontFamily="@font/mbold"
        android:text="INTERNET \n ADDICTION"
        android:textAlignment="center"
        android:textColor="@color/color_white"
        android:textSize="@dimen/text_sixteen_sp"
        app:layout_constraintBottom_toTopOf="@id/bottom"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/anxiety" />

    <android.support.design.widget.BottomNavigationView
        android:id="@+id/bottom"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/bottomnavigation"
        app:itemIconSize="@dimen/margin_twenty_eight_dp"
        app:itemIconTint="@color/color_white"
        app:itemTextColor="@color/color_white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:menu="@menu/mymenu" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/signout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/margin_twelve_dp"
        android:backgroundTint="@color/color_maroon"
        android:contentDescription="Logout"
        android:src="@drawable/signout"
        android:tooltipText="LOG OUT"
        app:layout_constraintBottom_toTopOf="@id/bottom"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/internet" />


</android.support.constraint.ConstraintLayout>