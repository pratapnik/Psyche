<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".themeActivity">



    <TextView
        android:id="@+id/tv_theme_description"
        android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="SELECT AN ISSUE"
            android:textSize="@dimen/text_thirty_two_sp"
            android:fontFamily="@font/mbold"
            android:textAlignment="center"
            android:textColor="@color/color_gradient_start"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/timeManagement"
            />

    <Button
        android:id="@+id/timeManagement"
        android:layout_width="160dp"
        android:layout_height="160dp"
        android:text="TIME \n MANAGEMENT"
        android:textColor="@color/color_white"
        android:textSize="@dimen/text_sixteen_sp"
        android:fontFamily="@font/mbold"
        android:background="@drawable/theme_button"
        android:backgroundTint="@color/color_purple"
        app:layout_constraintTop_toBottomOf="@id/tv_theme_description"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/anxiety"
        />

    <Button
            android:id="@+id/anxiety"
            android:layout_width="160dp"
            android:layout_height="160dp"
            android:text="ANXIETY"
            android:textColor="@color/color_black"
            android:textSize="@dimen/text_sixteen_sp"
            android:fontFamily="@font/mbold"
            android:background="@drawable/theme_button"
        android:backgroundTint="@color/color_yellow"
        app:layout_constraintTop_toBottomOf="@id/timeManagement"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/internet"
            />


        <Button
            android:id="@+id/internet"
            android:layout_width="160dp"
            android:layout_height="160dp"
            android:text="INTERNET \n ADDICTION"
            android:textColor="@color/color_white"
            android:textSize="@dimen/text_sixteen_sp"
            android:textAlignment="center"
            android:fontFamily="@font/mbold"
            android:background="@drawable/theme_button"
            android:backgroundTint="@color/color_light_green"
            android:layout_marginBottom="@dimen/margin_twenty_four_dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@id/bottom"
            app:layout_constraintTop_toBottomOf="@id/anxiety"
            />

    <android.support.design.widget.BottomNavigationView
        android:id="@+id/bottom"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/bottomnavigation"
        app:menu="@menu/mymenu"
        app:itemIconTint="@color/color_white"
        app:itemIconSize="@dimen/margin_twenty_eight_dp"
        app:itemTextColor="@color/color_white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <android.support.design.widget.FloatingActionButton
            android:id="@+id/signout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/signout"
            android:contentDescription="Logout"
            android:backgroundTint="@color/color_maroon"
            app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/bottom"
        app:layout_constraintStart_toEndOf="@id/internet"
        android:layout_marginBottom="@dimen/margin_twelve_dp"
        />



</android.support.constraint.ConstraintLayout>