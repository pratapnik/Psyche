<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".loginActivity">

    <TextView
        android:id="@+id/a"
        android:layout_width="275dp"
        android:layout_height="121dp"
        android:layout_marginTop="50dp"
        android:layout_below="@+id/d"
        android:fontFamily="@font/mregular"
        android:text="Upto 50% of Mental and Psychological problems have their onset during adolescence"
        android:textAlignment="center"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:textColor="@color/subtleRed"
        android:textSize="20dp" />

    <ImageView
        android:id="@+id/d"
        android:layout_width="380dp"
        android:layout_height="167dp"
        android:layout_marginTop="110dp"
        android:src="@drawable/didyouknow"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/help"
        android:layout_width="295dp"
        android:layout_height="35dp"
        android:layout_marginTop="120dp"
        android:layout_below="@+id/a"
        android:fontFamily="@font/mregular"
        android:text="Sign in to a healthy lifestyle"
        android:textAlignment="center"
        android:layout_centerHorizontal="true"
        android:textColor="#000000"
        android:textSize="18dp" />

    <com.google.android.gms.common.SignInButton
        android:id="@+id/google"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/help"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"

         />


</RelativeLayout>