<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".loginActivity">

    <ImageView
        android:id="@+id/iv_did_you_know"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="110dp"
        android:src="@drawable/didyouknow"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/tv_fact"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_fourty_dp"
        android:layout_marginLeft="@dimen/margin_twenty_four_dp"
        android:layout_marginRight="@dimen/margin_twenty_four_dp"
        android:fontFamily="@font/mbold"
        android:text="Upto 50% of Mental and Psychological problems have their onset during adolescence"
        android:textAlignment="center"
        android:textColor="@color/subtleRed"
        android:textSize="@dimen/text_twenty_sp"
        app:layout_constraintTop_toBottomOf="@id/iv_did_you_know"
        app:layout_constraintStart_toStartOf="@id/iv_did_you_know"
        app:layout_constraintEnd_toEndOf="@id/iv_did_you_know"
         />


    <TextView
        android:id="@+id/tv_sign_in_message"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_eighty_dp"
        android:fontFamily="@font/mregular"
        android:text="Sign in to a healthy lifestyle"
        android:textAlignment="center"
        android:textColor="@color/textColor"
        android:textSize="@dimen/text_sixteen_sp"
        app:layout_constraintTop_toBottomOf="@id/tv_fact"
        app:layout_constraintStart_toStartOf="@id/tv_fact"
        app:layout_constraintEnd_toEndOf="@id/tv_fact"

        />

    <com.google.android.gms.common.SignInButton
        android:id="@+id/btn_google_sign_in"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/margin_twelve_dp"
        app:layout_constraintTop_toBottomOf="@id/tv_sign_in_message"
        app:layout_constraintStart_toStartOf="@id/tv_sign_in_message"
        app:layout_constraintEnd_toEndOf="@id/tv_sign_in_message"
         />

    <Button
        android:id="@+id/btn_sign_up"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
        android:fontFamily="@font/mbold"
        android:text="SIGN IN USING YOUR EMAIL"
        android:textColor="@color/color_blue"
        android:textSize="@dimen/text_sixteen_sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
         />

</android.support.constraint.ConstraintLayout>