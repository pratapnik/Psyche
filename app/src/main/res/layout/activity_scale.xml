<?xml version="1.0" encoding="utf-8"?>

<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ScaleDisplayActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar_scale"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:title="SCALE"
        app:titleTextColor="@color/color_white"
        app:titleTextAppearance="@style/mBoldAppearnace"
        android:background="@drawable/bottomnavigation"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />



    <ScrollView
        android:id="@+id/sv_scale"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:fadeScrollbars="false"
        android:layout_marginTop="@dimen/margin_twelve_dp"
        android:scrollbarSize="@dimen/padding_eight_dp"
        app:layout_constraintTop_toBottomOf="@id/toolbar_scale"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        >

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="@dimen/padding_eight_dp"
            >
            <TextView
                android:id="@+id/tv_time_management_scale"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TIME MANAGEMENT"
                android:textSize="@dimen/text_twenty_sp"
                android:fontFamily="@font/mbold"
                android:textColor="@color/color_white"
                android:background="@drawable/custom_background_themes"
                android:backgroundTint="@color/color_purple"
                android:padding="@dimen/padding_eight_dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                />

            <ImageView
                android:id="@+id/iv_time_management_scale_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/tmimage"
                app:layout_constraintTop_toBottomOf="@id/tv_time_management_scale"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                />
            <TextView
                android:id="@+id/tv_anxiety_scale"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ANXIETY"
                android:textSize="@dimen/text_twenty_sp"
                android:fontFamily="@font/mbold"
                android:textColor="@color/textColor"
                android:background="@drawable/custom_background_themes"
                android:backgroundTint="@color/color_yellow"
                android:padding="@dimen/padding_eight_dp"
                app:layout_constraintTop_toBottomOf="@id/iv_time_management_scale_image"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                />

            <ImageView
                android:id="@+id/iv_anxiety_scale_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/anx"
                app:layout_constraintTop_toBottomOf="@id/tv_anxiety_scale"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                />
            <TextView
                android:id="@+id/tv_internet_addiction_scale"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="INTERNET ADDICTION"
                android:textSize="@dimen/text_twenty_sp"
                android:fontFamily="@font/mbold"
                android:textColor="@color/color_white"
                android:background="@drawable/custom_background_themes"
                android:backgroundTint="@color/color_light_green"
                android:padding="@dimen/padding_eight_dp"
                app:layout_constraintTop_toBottomOf="@id/iv_anxiety_scale_image"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                />

            <ImageView
                android:id="@+id/iv_internet_addiction_scale_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/iad"
                app:layout_constraintTop_toBottomOf="@id/tv_internet_addiction_scale"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                />

        </android.support.constraint.ConstraintLayout>

    </ScrollView>









</android.support.constraint.ConstraintLayout>