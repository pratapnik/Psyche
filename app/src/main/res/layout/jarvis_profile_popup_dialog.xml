<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:padding="@dimen/margin_sixteen_dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/tvPopupTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/label_popup_dialog_title"
        android:textAllCaps="true"
        android:textSize="@dimen/text_twenty_eight_sp"
        android:fontFamily="@font/mbold"
        android:textColor="@color/textColor"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/tvPopupEmail"
        />

    <TextView
        android:id="@+id/tvPopupEmail"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        tools:text="Email"
        android:layout_marginTop="@dimen/margin_twenty_four_dp"
        android:textSize="@dimen/text_sixteen_sp"
        android:fontFamily="@font/mregular"
        android:textColor="@color/textColor"
        android:drawableLeft="@drawable/ic_email"
        android:drawablePadding="@dimen/padding_eight_dp"
        app:layout_constraintStart_toStartOf="@id/tvPopupTitle"
        app:layout_constraintEnd_toEndOf="@id/tvPopupTitle"
        app:layout_constraintTop_toBottomOf="@id/tvPopupTitle"
        app:layout_constraintBottom_toTopOf="@id/tvOk"
        />

    <TextView
        android:id="@+id/tvOk"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/label_ok"
        android:clickable="true"
        android:textSize="@dimen/text_sixteen_sp"
        android:fontFamily="@font/mbold"
        android:textColor="@color/textColor"
        android:padding="@dimen/margin_sixteen_dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvPopupEmail"
        app:layout_constraintBottom_toBottomOf="parent"
        />

</android.support.constraint.ConstraintLayout>