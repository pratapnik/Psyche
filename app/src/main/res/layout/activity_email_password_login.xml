<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bottomnavigation"
    tools:context=".EmailPasswordLoginActivity">


    <android.support.constraint.Guideline
        android:id="@+id/guideline_email_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.25"
        />

    <TextView
        android:id="@+id/tv_welcome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="WELCOME"
        android:textColor="@color/color_white"
        android:fontFamily="@font/mbold"
        android:textSize="@dimen/text_twenty_four_sp"
        android:layout_marginTop="@dimen/margin_twenty_four_dp"
        android:layout_marginStart="@dimen/margin_twelve_dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginLeft="@dimen/margin_twelve_dp" />

    <android.support.constraint.ConstraintLayout
        android:id="@+id/cl_email_login"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/custom_background_themes"
        android:backgroundTint="@color/color_white"
        android:elevation="@dimen/margin_twenty_four_dp"
        app:layout_constraintTop_toBottomOf="@id/guideline_email_login"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        >



    </android.support.constraint.ConstraintLayout>







</android.support.constraint.ConstraintLayout>