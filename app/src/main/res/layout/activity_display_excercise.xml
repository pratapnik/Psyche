<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DisplayExerciseActivity">


    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbarDisplayExercises"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:title="Exercises"
        app:navigationIcon="@drawable/ic_back"
        android:background="@color/color_app_theme_accent"
        app:titleTextColor="@color/color_toolbar_title"
        app:titleTextAppearance="@style/mBoldAppearnace"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <FrameLayout
        android:id="@+id/flExercise"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@color/color_white"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/toolbarDisplayExercises"
        />

</androidx.constraintlayout.widget.ConstraintLayout>