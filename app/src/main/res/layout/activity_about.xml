<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AboutUsActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar_about"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:title="ABOUT US"
        app:titleTextColor="@color/color_white"
        app:titleTextAppearance="@style/mBoldAppearnace"
        android:background="@drawable/bottomnavigation"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />


    <ImageView
        android:id="@+id/iv_about"
        android:layout_width="260dp"
        android:layout_height="200dp"
        android:layout_marginTop="50dp"
        android:src="@drawable/nikhilprofileimage"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/toolbar_about"
        />

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:text="NIKHIL PRATAP SINGH"
        android:textSize="30sp"
        android:textColor="@color/textColor"
        android:fontFamily="@font/mbold"
        app:layout_constraintTop_toBottomOf="@id/iv_about"
        app:layout_constraintStart_toStartOf="@id/iv_about"
        app:layout_constraintEnd_toEndOf="@id/iv_about"
        android:layout_marginTop="@dimen/margin_fourty_dp"
        />

    <TextView
        android:id="@+id/tv_description"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Software Engineer at OLX India"
        android:textAlignment="center"
        android:layout_marginTop="@dimen/margin_fourty_dp"
        android:textSize="@dimen/text_twenty_four_sp"
        android:fontFamily="@font/mregular"
        app:layout_constraintTop_toBottomOf="@id/tv_name"
        app:layout_constraintStart_toStartOf="@id/tv_name"
        app:layout_constraintEnd_toEndOf="@id/tv_name"
        />


    <ImageView
        android:id="@+id/iv_linked_in_logo"
        android:layout_width="@dimen/margin_twenty_four_dp"
        android:layout_height="@dimen/margin_twenty_four_dp"
        android:src="@drawable/linkedinlogo"
        android:layout_marginTop="@dimen/margin_twelve_dp"
        app:layout_constraintTop_toBottomOf="@id/tv_description"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <TextView
        android:id="@+id/tv_trouble"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Having trouble using the app?"
        android:layout_margin="@dimen/margin_twelve_dp"
        android:textSize="@dimen/text_twelve_sp"
        android:padding="@dimen/padding_four_dp"
        android:fontFamily="@font/mregular"
        android:textColor="@color/textColor"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        />

    <Button
        android:id="@+id/btn_click_here"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CLICK HERE"
        android:textSize="@dimen/text_twelve_sp"
        android:textColor="@color/color_maroon"
        android:fontFamily="@font/mbold"
        style="@style/Widget.MaterialComponents.Button.TextButton"
        android:background="@drawable/custom_background_themes"
        android:backgroundTint="@color/color_maroon"
        app:layout_constraintStart_toEndOf="@id/tv_trouble"
        app:layout_constraintTop_toTopOf="@id/tv_trouble"
        app:layout_constraintBottom_toBottomOf="@id/tv_trouble"
        />




</android.support.constraint.ConstraintLayout>