<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AboutUsActivity">

    <ImageView
        android:id="@+id/b"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_arrow_back_24dp"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="15dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />


    <ImageView
        android:id="@+id/iv_about"
        android:layout_width="260dp"
        android:layout_height="200dp"
        android:layout_marginTop="50dp"
        android:src="@drawable/nikhilprofileimage"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/b"
        />

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:text="NIKHIL PRATAP SINGH"
        android:textSize="30sp"
        android:textColor="@color/textColor"
        android:fontFamily="@font/mbold"
        app:layout_constraintTop_toBottomOf="@id/iv_about"
        app:layout_constraintStart_toStartOf="@id/iv_about"
        app:layout_constraintEnd_toEndOf="@id/iv_about"
        android:layout_marginTop="@dimen/margin_fourty_dp"
        />

    <TextView
        android:id="@+id/tv_description"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Software Engineer at OLX India"
        android:textAlignment="center"
        android:layout_marginTop="@dimen/margin_fourty_dp"
        android:textSize="@dimen/text_twenty_four_sp"
        android:fontFamily="@font/mregular"
        app:layout_constraintTop_toBottomOf="@id/tv_name"
        app:layout_constraintStart_toStartOf="@id/tv_name"
        app:layout_constraintEnd_toEndOf="@id/tv_name"
        />

    <TextView
        android:id="@+id/tv_linkedin"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="LinkedIn Profile"
        android:layout_marginLeft="@dimen/margin_twelve_dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="@dimen/margin_twenty_four_dp"
        android:textSize="@dimen/text_sixteen_sp"
        android:fontFamily="@font/mregular"
        android:textColor="@color/textColor"
        />

    <ImageView
        android:id="@+id/iv_linked_in_logo"
        android:layout_width="@dimen/margin_fourty_dp"
        android:layout_height="@dimen/margin_fourty_dp"
        android:src="@drawable/linkedinlogo"
        android:layout_marginStart="@dimen/margin_twenty_four_dp"
        android:layout_marginLeft="@dimen/margin_twenty_four_dp"
        app:layout_constraintTop_toTopOf="@id/tv_linkedin"
        app:layout_constraintStart_toEndOf="@id/tv_linkedin"
        app:layout_constraintBottom_toBottomOf="@id/tv_linkedin"
         />

</android.support.constraint.ConstraintLayout>